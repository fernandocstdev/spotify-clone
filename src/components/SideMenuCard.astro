---
import type { Playlist } from "@/lib/data";

interface Props {
	playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, artists, cover, color } = playlist;

const artistString = artists.join(", ");
---

<li>
	<a
		href={`playlist/${id}`}
		class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
	>
		<picture class="h-12 w-12 flex-none">
			<img
				src={cover}
				alt={`Cover of ${title}`}
				class="object-cover w-full rounded-md"
			/>
		</picture>
		<div class="flex flex-auto flex-col truncate">
			<h4 class="text-zinc-200 text-xs">{title}</h4>
			<span class="text-zinc-500 text-[11px]">{artistString}</span>
		</div>
	</a>
</li>
